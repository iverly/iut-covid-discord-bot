{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": false,
      "noImplicitUseStrict": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
      },
      "plugins": [
        {
          "transform": "@zerollup/ts-transform-paths"
        }
      ]
    },
    "include": [
      "src/**/*.ts"
    ]
}